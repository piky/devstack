import threading

from paste import urlmap

from keystone.server import wsgi
from keystone.version import service


application = urlmap.URLMap()
app_lock = threading.Lock()
with app_lock:
    application['/identity'] = wsgi.initialize_public_application()
    config = 'config:%s' % wsgi.find_paste_config()
    application['/identity_admin'] = service.loadapp(config, 'admin')
