}

function install_networking_hyperv {
    git_clone $NET_HYPERV_CLIENT_REPO $NET_HYPERV_CLIENT_DIR $NET_HYPERV_CLIENT_BRANCH
    export PYTHONPATH=$NET_HYPERV_CLIENT_DIR/src:$PYTHONPATH
}

function start_networking_hyperv {
    :
}

function stop_networking_hyperv {
    :
}

function check_networking_hyperv {
    :
}

# Restore xtrace
$MN3_XTRACE

