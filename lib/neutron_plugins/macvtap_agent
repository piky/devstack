    :
}

function neutron_plugin_configure_dhcp_agent {
    :
}

function neutron_plugin_configure_l3_agent {
    :
}

function neutron_plugin_configure_plugin_agent {
    # Setup physical network interface mappings.
    if [[ "$MACVTAP_INTERFACE_MAPPINGS" == "" ]] && [[ "$PHYSICAL_NETWORK" != "" ]] && [[ "$MACVTAP_PHYSICAL_INTERFACE" != "" ]]; then
        MACVTAP_INTERFACE_MAPPINGS=$PHYSICAL_NETWORK:$MACVTAP_PHYSICAL_INTERFACE
    fi
    if [[ "$MACVTAP_INTERFACE_MAPPINGS" != "" ]]; then
        iniset /$Q_PLUGIN_CONF_FILE macvtap physical_interface_mappings $MACVTAP_INTERFACE_MAPPINGS
    fi
    # Only the NooPFirewallDriver is supported. If not set, the agent will terminate.
    iniset /$Q_PLUGIN_CONF_FILE securitygroup firewall_driver neutron.agent.firewall.NoopFirewallDriver
    AGENT_BINARY="$NEUTRON_BIN_DIR/neutron-macvtap-agent"
}

function neutron_plugin_setup_interface_driver {
    :
}

function neutron_plugin_check_adv_test_requirements {
    :
}

# Restore xtrace
$_XTRACE_NEUTRON_MACVTAP
