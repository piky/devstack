# Save trace setting
_XTRACE_NEUTRON_MACVTAP=$(set +o | grep xtrace)
set +o xtrace

function is_neutron_ovs_base_plugin {
    # macvtap doesn't use OVS
    return 1
}

function neutron_plugin_create_nova_conf {
