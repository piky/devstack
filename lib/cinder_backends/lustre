#!/bin/bash
#
# lib/cinder_backends/lustre
# Configure the lustre backend

# Enable with:
#
#   CINDER_ENABLED_BACKENDS+=,lustre:<volume-type-name>

# Dependencies:
#
# - ``functions`` file
# - ``cinder`` configurations

# CINDER_CONF
# CINDER_CONF_DIR
# CINDER_LUSTRE_SHARES - Contents of lustre shares config file

# configure_cinder_backend_lustre - Configure Cinder for Lustre backends

# Save trace setting
_XTRACE_CINDER_LUSTRE=$(set +o | grep xtrace)
set +o xtrace


# Entry Points
# ------------

# configure_cinder_backend_lustre - Set config files, create data dirs, etc
function configure_cinder_backend_lustre {
    local be_name=$1
    iniset $CINDER_CONF $be_name volume_backend_name $be_name
    iniset $CINDER_CONF $be_name volume_driver "cinder.volume.drivers.lustre.LustreDriver"
    iniset $CINDER_CONF $be_name lustre_shares_config "$CINDER_CONF_DIR/lustre-shares-$be_name.conf"

    if [[ -n "$CINDER_LUSTRE_SHARES" ]]; then
        CINDER_LUSTRE_SHARES=$(echo $CINDER_LUSTRE_SHARES | tr ";" "\n")
        echo "$CINDER_LUSTRE_SHARES" | tee "$CINDER_CONF_DIR/lustre-shares-$be_name.conf"
    fi
}


# Restore xtrace
$_XTRACE_CINDER_LUSTRE

# Local variables:
# mode: shell-script
# End:
