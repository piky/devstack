#!/bin/bash
#
# lib/cinder_backends/sheepdog
# Configure the sheepdog backend

# Enable with:
#
#   CINDER_ENABLED_BACKENDS+=,sheepdog:<volume-type-name>

# Dependencies:
#
# - ``functions`` file
# - ``cinder`` configurations

# CINDER_CONF
# CINDER_CONF_DIR

# configure_cinder_backend_sheepdog - Configure Cinder for Sheepdog backends

# Save trace setting
SHEEPDOG_XTRACE=$(set +o | grep xtrace)
set +o xtrace


# Entry Points
# ------------

# configure_cinder_backend_sheepdog - Set config files, create data dirs, etc
function configure_cinder_backend_sheepdog {
    local be_name=$1
    iniset $CINDER_CONF $be_name volume_backend_name $be_name
    iniset $CINDER_CONF $be_name volume_driver "cinder.volume.drivers.sheepdog.SheepdogDriver"
}


# Restore xtrace
$SHEEPDOG_XTRACE

# Local variables:
# mode: shell-script
# End:
